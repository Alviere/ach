FROM golang:1.15-buster as builder
WORKDIR /go/src/github.com/Alviere/ach
RUN apt-get update && apt-get install make gcc g++
COPY . .
RUN make build-webui

FROM debian:10
LABEL maintainer="Moov <support@moov.io>"
RUN apt-get update && apt-get install -y ca-certificates

COPY --from=builder /go/src/github.com/Alviere/ach/bin/webui /bin/webui
COPY --from=builder /go/src/github.com/Alviere/ach/cmd/webui/assets/ /assets/
# USER moov

ENV ASSETS_PATH=../assets/

EXPOSE 8083
EXPOSE 9093
ENTRYPOINT ["/bin/webui"]
